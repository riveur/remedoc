{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": [],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["build/**", "public/**"]
		},
		"@repo/server#build": {
			"dependsOn": ["@repo/web#build"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"queue:work": {
			"dependsOn": ["^queue:work"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
